@using PlanB.Common
@using PlanB.Web.ViewModels.Employee.Tanks
@using PlanB.Web.ViewModels.Employee.Batches
@model BatchesListViewModel
@{
    ViewData["Title"] = "All Batches";

    
}


<div class="container-fluid">


    <div class="row">
        @await Component.InvokeAsync("Tanks")

    </div>

    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">All Batches</h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Start date</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Start date</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var batch in Model.Batches)
                            {
                                <tr>
                                    <td>@batch.FullName</td>
                                    <td>@batch.Type</td>
                                    <td>@batch.Hour</td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

</div>








