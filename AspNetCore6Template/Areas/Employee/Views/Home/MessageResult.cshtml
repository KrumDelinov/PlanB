@using PlanB.Web.ViewModels.Employee.Home
@model MessageReportViewModel
@{
    ViewData["Title"] = "All";
}
@if (this.TempData["InfoMessage"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessage"]
    </div>
}

<h1>All</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1574583246/AAA/2.jpg" class="d-block ui-w-40 rounded-circle" alt="">
                        <div id="userInput" class="media-body ml-3">
                            @Model.UserName
                        </div>

                    </div>
                </div>
            </div>
            <div class="card-body">
                <article>
                    <a asp-action="ReadMessage" asp-route-id="@Model.Id">
                        @Html.Raw(Model.SanitizedContent)
                    </a>

                </article>
            </div>
            <div id='messageId' hidden>@Model.Id</div>
        </div>
    </div>
</div>
<hr />

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/sendMessageCount.js"></script>

