@using PlanB.Common
@using PlanB.Web.ViewModels.Employee.Tanks
@using PlanB.Web.ViewModels.Employee.Batches
@model BatchesListViewModel
@{
    ViewData["Title"] = "Index";

    var test = new int[] { 100, 200, 400, };
}


<ul class="navbar-nav">
    <li class="nav-item">
        <a asp-action="Create">New Massage</a>
    </li>
    <li class="nav-item">
        <a asp-action="All">All Massage</a>
    </li>
    <li class="nav-item">
        <a asp-action="Chat">Chat</a>
    </li>
    <li class="nav-item">
        <a asp-action="ChartReport">Report</a>
    </li>
     <li class="nav-item">
        <a asp-action="Column">Kendo</a>
    </li>

    @if (this.User.IsInRole(GlobalConstants.ManagerRoleName))
    {
        <li class="nav-item">
            <a asp-area="Manager" asp-controller="Ingradients" asp-action="Index">Ingradients</a>
        </li>
        <li class="nav-item">
            <a asp-area="Manager" asp-controller="Recipes" asp-action="Index">Recipes</a>
        </li>
        <li class="nav-item">
            <a asp-area="Manager" asp-controller="Tanks" asp-action="Index">Tanks</a>
        </li>

    }
</ul>



<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
    </div>

    <!-- Content Row -->


    <div class="row">
        @await Component.InvokeAsync("Tanks")

    </div>

    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Tables</h1>
        <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h6 class="m-0 font-weight-bold text-primary">All Batches</h6>
                    <a asp-controller="Batches" asp-action="CreateBigCup" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> New Batch</a>
                </div>

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Start date</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Start date</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var batch in Model.Batches)
                            {
                                <tr>
                                    <td>@batch.FullName</td>
                                    <td>@batch.Type</td>
                                    <td>@batch.Hour</td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>


</div>








