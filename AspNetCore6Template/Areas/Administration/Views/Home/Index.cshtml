@model PlanB.Web.ViewModels.Administration.Dashboard.IndexViewModel
@{
    this.ViewData["Title"] = "Admin dashboard";
    var roles = String.Empty;
    var row = 1;
}

<h1>@this.ViewData["Title"]</h1>


<!-- Content Row -->
<div class="container-fluid">


    <div class="row">
        @await Component.InvokeAsync("Tanks")

    </div>

    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Users</h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone Number</th>
                                <th>Roles</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Phone Number</th>
                                <th>Roles</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.PhomeNumber</td>
                                    <td>@(roles = string.Join(" | ", user.Roles.Select(x => x.Name)))</td>
                                    <td>
                                        <div class="btn">
                                            <a asp-area="Administration" asp-controller="Dashboard" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary" style="width:auto">Edit</a>
                                        </div>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

</div>










