@model PlanB.Web.ViewModels.Employee.Recipe.RecipeDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h4>Recipe</h4>
<hr />
<div class="list-group">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="list-group-item list-group-item-action active" aria-current="true">
        @Model.Name
    </a>

    @foreach (var item in Model.Ingradients)
    {
        <a asp-action="Edit" asp-controller="Ingradients" asp-route-id="@item.Id" class="list-group-item list-group-item-action">@item.Name - @item.Quantity</a>
    }


</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
