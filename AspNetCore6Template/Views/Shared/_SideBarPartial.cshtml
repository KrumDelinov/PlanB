@using Microsoft.AspNetCore.Identity
@using PlanB.Common
@using PlanB.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<!-- Sidebar -->
<ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

    <!-- Sidebar - Brand -->
    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
        <div class="sidebar-brand-icon rotate-n-15">
            <i class="fas fa-laugh-wink"></i>
        </div>
        <div class="sidebar-brand-text mx-3">Plan B <sup>2</sup></div>
    </a>

    <!-- Divider -->
    <hr class="sidebar-divider my-0">

    <!-- Nav Item - Dashboard -->
    <li class="nav-item active">

        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Dashboard</span>
        </a>


    </li>

    <!-- Divider -->
    <hr class="sidebar-divider">

    <!-- Heading -->
    <div class="sidebar-heading">
        Interface
    </div>

    <!-- Nav Item - Pages Collapse Menu -->
    <li class="nav-item">
        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
            <i class="fas fa-fw fa-cog"></i>
            <span>Reports</span>
        </a>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
            <div class="bg-white py-2 collapse-inner rounded">
                <h6 class="collapse-header">Reports:</h6>
                <a class="collapse-item" asp-area="Employee" asp-controller="Batches" asp-action="Index">All Report</a>
                <a class="collapse-item" asp-area="Manager" asp-controller="Home" asp-action="Date">Weekly Report</a>
                <a class="collapse-item" asp-area="Manager" asp-controller="Home" asp-action="Month">Monthly Report</a>
            </div>
        </div>
    </li>

    @if (this.User.IsInRole(GlobalConstants.ManagerRoleName))
    {
        <!-- Nav Item - Utilities Collapse Menu -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities" aria-expanded="true" aria-controls="collapseUtilities">
                <i class="fas fa-fw fa-wrench"></i>
                <span>Tanks</span>
            </a>
            <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">
                    <h6 class="collapse-header">Custom Utilities:</h6>
                    <a class="collapse-item" asp-area="Manager" asp-controller="Tanks" asp-action="Index">All Tanks</a>

                </div>
            </div>
        </li>
    }


    <!-- Divider -->
    <hr class="sidebar-divider">

    <!-- Heading -->
    <div class="sidebar-heading">
        Addons
    </div>
    @if (this.User.IsInRole(GlobalConstants.ManagerRoleName))
    {

        <!-- Nav Item - Pages Collapse Menu -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages" aria-expanded="true" aria-controls="collapsePages">
                <i class="fas fa-fw fa-folder"></i>
                <span>Recipes</span>
            </a>
            <div id="collapsePages" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">
                    <h6 class="collapse-header">Recipes Screens:</h6>
                    <a class="collapse-item" asp-area="Manager" asp-controller="Recipes" asp-action="Index">All Recipes</a>
                    <div class="collapse-divider"></div>
                    <h6 class="collapse-header">Ingradients Screens:</h6>
                    <a class="collapse-item" asp-area="Manager" asp-controller="Ingradients" asp-action="Index">All Ingradients</a>
                </div>
            </div>
        </li>
    }

    <!-- Nav Item - Charts -->
    <li class="nav-item">
        <a class="nav-link" asp-action="All" asp-controller="Home" asp-area="Employee">
            <i class="fas fa-fw fa-table"></i>
            <span>All Messages</span>
        </a>
    </li>


    <!-- Nav Item - Tables -->
    <li class="nav-item">
        <a class="nav-link" asp-action="Create" asp-area="Employee">
            <i class="fas fa-fw fa-table"></i>
            <span>Message</span>
        </a>
    </li>


    <!-- Nav Item - Tables -->
    <li class="nav-item">
        <a class="nav-link" asp-action="Chat" asp-controller="Home" asp-area="">
            <i class="fas fa-fw fa-table"></i>
            <span>Chat</span>
        </a>
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider d-none d-md-block">

    <!-- Sidebar Toggler (Sidebar) -->
    <div class="text-center d-none d-md-inline">
        <button class="rounded-circle border-0" id="sidebarToggle"></button>
    </div>

</ul>
<!-- End of Sidebar -->
